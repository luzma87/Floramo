<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/busqueda_results_image"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_thin"
        android:padding="3dp"

        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/busqueda_results_nombre_cientifico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="level3 nombre cientifico"

        android:layout_toEndOf="@id/busqueda_results_image"
        android:layout_toRightOf="@id/busqueda_results_image"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/busqueda_results_familia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="level3 familia"
        android:maxLines="3"
        android:layout_alignStart="@id/busqueda_results_nombre_cientifico"
        android:layout_alignLeft="@id/busqueda_results_nombre_cientifico"
        android:layout_below="@id/busqueda_results_nombre_cientifico"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_drawer_fotos_light_tiny"
        android:layout_marginTop="7dp"

        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/busqueda_results_familia"
        android:layout_alignStart="@id/busqueda_results_familia"
        android:layout_alignLeft="@id/busqueda_results_familia" />

    <TextView
        android:id="@+id/busqueda_results_cant_fotos"

        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"

        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView" />

    <ImageView
        android:id="@+id/busqueda_results_fv_1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"

        android:layout_alignTop="@+id/busqueda_results_nombre_cientifico"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_fv_aquatic_tiny" />

    <ImageView
        android:id="@+id/busqueda_results_fv_2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"

        android:layout_toStartOf="@+id/busqueda_results_fv_1"
        android:layout_toLeftOf="@+id/busqueda_results_fv_1"
        android:src="@drawable/ic_fv_shrub_tiny" />

    <ImageView
        android:id="@+id/busqueda_results_cl_1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"

        android:src="@drawable/ic_cl_red_tiny"

        android:layout_below="@+id/busqueda_results_fv_1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/busqueda_results_cl_2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"

        android:src="@drawable/ic_cl_blue_tiny"

        android:layout_toStartOf="@id/busqueda_results_cl_1"
        android:layout_toLeftOf="@id/busqueda_results_cl_1"
        android:layout_alignTop="@id/busqueda_results_cl_1" />

</RelativeLayout>